!!! 5
%html
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => 'description', :content => "Reports"}
    %link{:rel => 'icon', :href => '/images/icon.png', :type => 'images/png'}
    %link{:rel => 'shortcut icon', :href => '/images/icon.png', :type => 'images/png'}
  %body
    -temp = Report::Transactions.new(Time.utc(2005,1,1),Time.utc(2006,12,21))
    %p="Total: " + Currency.to_s(temp.total)
    -date_now = Time.now.strftime("%Y-%m-%d")
    -start_date = Time.now.strftime("%Y-%m-01")
    %p
      %label{:for => "date"} Starting Date:
      %input#date{:type => "date", :value => start_date}
      %label{:for => "date"} Ending Date:
      %input#date{:type => "date", :value => date_now}
    
      